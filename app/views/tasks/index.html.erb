<% if logged_in? %>
    <p>ログイン完了ユーザ: <%= current_user.name %></p>
    <h1>タスク一覧</h1>

    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id,task %> : <%= task.content %>&gt;<%= task.status %></li>
        <% end %>
    </ul>

    <%= link_to '新規タスクの追加', new_task_path %>
    <%= link_to 'ログアウト', logout_path, method: :delete %>
<% else %>
    <div class="center jumbotron">
        <div class="text-center">
          <h1>タスク管理ツール</h1>
          <%= link_to '新規アカウント作成', signup_path, class: 'signup' %>
          <%= link_to 'ログイン', login_path, class: 'login' %>
        </div>
      </div>
<% end %>